<Roles>
    <Role id="webshop-authors">
        <Permission>
            <ResourceDomain>webshop-merken-nodes</ResourceDomain>
            <Action>author</Action>
        </Permission>
        <Permission>
            <ResourceDomain>webshop-construction-nodes</ResourceDomain>
            <Action>readonly</Action>
        </Permission>
        <Permission>
            <ResourceDomain>hippo-request</ResourceDomain>
            <Action>author</Action>
        </Permission>
    </Role>

    <Role id="webshop-editors" inheritsFrom="webshop-authors">
        <Permission>
            <ResourceDomain>hippo-request</ResourceDomain>
            <Action>editor</Action>
        </Permission>
    </Role>
</Roles>